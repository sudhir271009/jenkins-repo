pipeline {
    agent { label 'node1' }

    environment {
        IMAGE_NAME = "pipeline-nginx:${BUILD_NUMBER}"
        APP_NAME   = "pipeline-nginx"
        PORT       = "30081"
        // myrepo is defined in Jenkins job parameters
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: "${myrepo}"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                  echo "Building Docker image..."
                  cd KUBERNETES
                  docker build -t ${IMAGE_NAME} .
                '''
            }
        }

        stage('Load Image to Kubernetes (containerd)') {
            steps {
                sh '''
                  echo "Importing image into containerd..."
                  docker save ${IMAGE_NAME} -o image.tar
                  sudo ctr -n k8s.io images import image.tar
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
cat <<EOF | kubectl apply -f -
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${APP_NAME}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ${APP_NAME}
  template:
    metadata:
      labels:
        app: ${APP_NAME}
    spec:
      containers:
      - name: nginx
        image: ${IMAGE_NAME}
        imagePullPolicy: Never
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: ${APP_NAME}-svc
spec:
  type: NodePort
  selector:
    app: ${APP_NAME}
  ports:
  - port: 80
    targetPort: 80
    nodePort: ${PORT}
EOF
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Application deployed successfully on NodePort ${PORT}"
        }
        failure {
            echo "❌ Kubernetes deployment failed"
        }
    }
}





