parameters {
    string(name: 'IMAGE_TAG', defaultValue: 'latest', description: 'Docker image tag')
}

pipeline {
    agent { label 'node1' }

    environment {
        IMAGE = "shiv2020/adidas:${IMAGE_TAG}"
        APP   = "pipeline-nginx"
        PORT  = "30086"
    }

    stages {

        stage('Verify Cluster Access') {
            steps {
                sh 'kubectl get nodes'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
cat <<EOF | kubectl apply -f -
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${APP}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ${APP}
  template:
    metadata:
      labels:
        app: ${APP}
    spec:
      containers:
      - name: nginx
        image: ${IMAGE}
        imagePullPolicy: Always
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: ${APP}-svc
spec:
  type: NodePort
  selector:
    app: ${APP}
  ports:
  - port: 80
    targetPort: 80
    nodePort: ${PORT}
EOF
"""
            }
        }
    }
}

