pipeline {
    agent { label 'jenkin-node1' }

    environment {
        // DockerHub details
        DOCKERHUB_REPO = "shiv2020/adidas"
        IMAGE_TAG      = "${BUILD_NUMBER}"

        // Container runtime details
        CONTAINER_NAME = "pipeline-nginx"
        PORT           = "30080"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "üì• Checking out source code..."
                git url: "${myrepo}", branch: 'main'
            }
        }

        stage('Verify Files') {
            steps {
                sh '''
                  echo "üìÇ Current workspace:"
                  pwd
                  ls -l

                  echo "üìÇ Inside dockerfile+index.html:"
                  ls -l dockerfile+index.html
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                  echo "üê≥ Building Docker image..."
                  cd dockerfile+index.html
                  docker build -t ${DOCKERHUB_REPO}:${IMAGE_TAG} .
                '''
            }
        }

        stage('Docker Hub Login') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'dockerhub-akblaze',
                        usernameVariable: 'DH_USER',
                        passwordVariable: 'DH_TOKEN'
                    )
                ]) {
                    sh '''
                      echo "$DH_TOKEN" | docker login -u "$DH_USER" --password-stdin
                    '''
                }
            }
        }

        stage('Tag & Push Image') {
            steps {
                sh '''
                  echo "üì§ Pushing image with build number..."
                  docker push ${DOCKERHUB_REPO}:${IMAGE_TAG}

                  echo "üè∑Ô∏è Tagging image as latest..."
                  docker tag ${DOCKERHUB_REPO}:${IMAGE_TAG} ${DOCKERHUB_REPO}:latest

                  echo "üì§ Pushing latest tag..."
                  docker push ${DOCKERHUB_REPO}:latest
                '''
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                  echo "üöÄ Running container..."

                  if docker ps -a --format '{{.Names}}' | grep -w ${CONTAINER_NAME}; then
                    docker rm -f ${CONTAINER_NAME}
                  fi

                  docker run -d \
                    -p ${PORT}:80 \
                    --name ${CONTAINER_NAME} \
                    ${DOCKERHUB_REPO}:latest
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Docker Image Pushed Successfully"
            echo "   - ${DOCKERHUB_REPO}:${IMAGE_TAG}"
            echo "   - ${DOCKERHUB_REPO}:latest"
            echo "üåç Application running on port ${PORT}"
        }

        failure {
            echo "‚ùå Pipeline failed"
        }
    }
}
